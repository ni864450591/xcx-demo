/* pages/person/person.wxss */
/* header */
.person-header{
    width: 100%;
    height: 240rpx;
    background-color:#35BD00;
    display: flex;
    align-items: center;
    margin-bottom:40rpx;
}
.person-header-img{
    width: 90rpx;
    height:90rpx;
    margin: 0 50rpx 0 100rpx;
}
.person-header-info{
    flex:1;
}
.person-name{
    font-size: 32rpx;
    color: #FFFFFF;
    margin-bottom:10rpx;
}
.person-sub_name{
    font-size: 24rpx;
    color: #FFFFFF;
}
.person-header-more{
    width: 20rpx;
    height: 30rpx;
    color:#fff;
    margin-left: 200rpx;
}
/* list */
.person-list{
    margin-top:20rpx;
}
.person-item{
    width: 100%;
    height: 108rpx;
    background-color: #fff;
    border-bottom:1px solid grey;
    display: flex;
    align-items: center;
}
.person-item-image{
    width: 40rpx;
    height: 40rpx;
    margin:0 100rpx  0 100rpx;

}
.person-item-text{
    font-size: 32rpx;
    color: #626161;
}