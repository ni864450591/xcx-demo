.index-header-banner{
  width: 100%;
  height:510rpx;
}
.index-recommend{
  
  padding:10rpx;
  padding-top:30rpx;
  background-color:#eee;
}
.index-recommend-title{
  margin-left: 30rpx;
  font-size:28rpx;
  color: #999999;
  margin-bottom: 20rpx;
}
.index-recommend-item{
  display: flex;
  width: 730rpx;
  height: 180rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
