  width: 140rpx;
  height: 140rpx;
}
.index-recommend-item-info{
  flex:1;

}
.index-recommend-item-name-kdy{
  display: flex;
  font-size: 28rpx;
  color: #626161;
  justify-content: start;
  align-items: center;
  margin-bottom: 10rpx;
}
.kdy-name{
  margin-right: 60rpx;
}
.index-recommend-item-name-kd{
  display: flex;
  font-size: 24rpx;
