/* header */
.header{
    position: relative;
}
.header-input{
    border:1rpx solid #D9DDE1;
    margin:22rpx 36rpx 14rpx 36rpx;
    border-radius: 36rpx;
    line-height: 36rpx;
    font-size:26rpx;
    padding:0 200rpx;
}
.header-input-placeholder{
    color: rgba(133,133,133,0.60);
}
.header-input-icon{
    position: absolute;
    top:15rpx;
    left:50%;
    transform:translateX(-175rpx);
}


/* navigator */
.navigator{
    display: flex;
    margin-bottom:6rpx;
}

.navigator-item{
    flex:1;
    line-height: 112rpx;
    text-align: center;
    vertical-align: middle;
    font-size: 32rpx;
    color: #2B333B;
    position: relative;
}

.navigator-img{
    /* 小图标的微调 */
    position: relative;
    top:4px;
    width:36rpx;
    height: 36rpx;
}
.navigator-item-active{
    width:32rpx;
    height: 8rpx;
    border-radius: 4px;
    /* 导航条相对位置 */
    position: absolute;
    left:90rpx;
    bottom:20rpx;
}
.navigator-item-recommend{
    background: #F01414;
}
.navigator-item-path{
    background:#8000FF;
}
.navigator-item-project{
    background:#B18904;
}
.navigator-item-activity{
    background:#FA58F4;
}

/* swiper */
/* 主要是前后两张照片空格的计算 */
.swiper{
    height: 232rpx;
}
.swiper-item{
    box-sizing: border-box;
    padding:0 6rpx;
}
.swiper-image{
    width: 708rpx;
    border-radius: 12rpx;
    height: 234rpx;
}

/* project */
.project{
    margin-left:40rpx;
    margin-top:32rpx;
}
.project-title{
    font-size: 28rpx;
    color: #2B333B;
    line-height: 32rpx;
    font-weight: bold;
}
/* 这里每个元素的位置要注意 */
.project-item{
    display: flex;
    margin-top:32rpx;
    margin-bottom: 32rpx;
}
.project-item-pic{
    width:208rpx;
    height: 136rpx;
     border-radius:16rpx;
}
.project-item-content{
    flex:1;
    margin-left:24rpx;
    /* box-shadow: inset 0 0 0 0 #D9DDE1;  */
    border-bottom:1px solid #D9DDE1;
    margin-right:17rpx;
   
}
.project-item-title{
    font-size: 32rpx;
    color: #2B333B;
    line-height: 40rpx;
    margin-bottom:12rpx;
    font-weight: bold;
}
.project-item-tags{
    font-size: 24rpx;
    line-height: 24rpx;
    color:#71777D;
}

.project-item-tags view{
    float: left;
    margin-right:18rpx;
}
.projcet-item-price-active{
    font-size: 28rpx;
    color: #F01414;
    font-weight: bold;
    line-height: 32rpx;
}

.projcet-item-price{
font-size: 24rpx;
color: #71777D;
line-height: 32rpx;
}
.project-item-notice{
    font-size: 24rpx;
    box-sizing: border-box;
    padding:0 6rpx;
    color: #F20D0D;
    line-height: 32rpx;
    background: rgba(242,13,13,0.10);
    border-radius: 4rpx;
}
.project-item-text{
font-size: 24rpx;
color: #71777D;
line-height: 32rpx;
}
.project-item-user{
    line-height: 32rpx;
    color: #71777D;
}
.porject-item-icon{
    position: relative;
    top:6rpx;
    width:24rpx;
    height: 24rpx;
    line-height: 32rpx;
}
.project-empty{
    font-size:36rpx;
    margin:100rpx 220rpx;
}

/*activity */
.activity-item{
    display: block;
    width:702rpx;
    height: 232rpx;
    margin:0 auto 32rpx auto;
    border-radius:12rpx;
}